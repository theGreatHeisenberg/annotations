---js
const eleventyNavigation = {
	key: "Home",
	order: 1
};
---

{# Latest Post Section #}
{% set latestPost = collections.posts | reverse | first %}
{% if latestPost %}
<section class="latest-post">
	<h2 class="section-heading">Latest</h2>

	<article>
		<h3 class="latest-post-title">
			<a href="{{ latestPost.url }}">{{ latestPost.data.title }}</a>
		</h3>

		<div class="latest-post-meta">
			<time datetime="{{ latestPost.date | htmlDateString }}">{{ latestPost.date | readableDate("LLLL d, yyyy") }}</time>
			<span class="meta-separator">·</span>
			<span class="read-time">{{ latestPost.templateContent | wordcount | readtime }} minute read</span>
		</div>

		<p class="latest-post-preview">
			{{ latestPost.data.description }}
			<a href="{{ latestPost.url }}" class="keep-reading">Keep reading →</a>
		</p>
	</article>
</section>
{% endif %}

{# Writing Section - All Posts #}
<section class="writing-section">
	<h2 class="section-heading">All Posts</h2>

	<ul class="writing-list">
		{%- for post in collections.posts | reverse %}
		<li class="writing-item">
			<time class="writing-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLL yyyy") }}</time>
			<a href="{{ post.url }}" class="writing-title">{{ post.data.title }}</a>
		</li>
		{%- endfor %}
	</ul>
</section>
